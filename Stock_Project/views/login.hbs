// this is event handler for when submit button is pressed
    $("#submit").click(function(){
        var name = $("#user").val();
        var pass = $("#password").val();

// this will need to be updated to use server, this is fake placeholder
        // if name or password is empty display this error
        if (name == "" || pass =="") {
            error.html("Fill in all fields!");
            error.css("color", "red");
            // name or password does not equal the fake username of password make this error
        } else if (name !== fakeName || pass!==fakePass) {
            error.html("The username and password do not match!");
            error.css("color", "red");
            // if username and password matched fake credentials display this
        } else if (name == fakeName && pass==fakePass) {
            error.html("Credentials correct!");
            error.css("color", "green"); // two parameters for css makes this a setter
            // make it pop new page
        }
    });

    $("#createAccount").click(function(){
