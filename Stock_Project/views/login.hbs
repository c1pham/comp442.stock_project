<h1>{{title}}</h1>

<!--form with inputs-->
<form>
    <input type="text" id="user" placeholder="Username"><br>
    <input type="password" id="password" placeholder="Password"><br>
    <input type="button" id="submit" value="Log In">
    <input type="button" id="createAccount" value="Create Account">
</form>

<div id="error">
    <!--inner html-->
</div>

